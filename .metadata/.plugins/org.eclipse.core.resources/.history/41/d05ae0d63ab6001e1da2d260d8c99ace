	<script>  let ratedValue = 0;

        function rate(value) {
        ratedValue = value;

        // Atualiza as classes das estrelas
        for (let i = 1; i <= 5; i++) {
            const star = document.querySelector(.star:nth-child(${i}));
            star.classList.remove('active');

            if (i <= ratedValue) {
            star.classList.add('active');
            }
        }

        // Aqui você pode enviar a avaliação para o servidor ou realizar outras ações
        console.log('Avaliação: ' + ratedValue);
        }</script>
